<div class="col-12 dcb-body">
  <div class="c-summary row mb-5 no-gutters justify-content-center t-align-c">
    <div class="col-12 dcb-body">
      <h2>DAILY CODE BYTES (DCBâ€™s)</h2>
      <h5 class="bold pt-2">Your daily dose of programming. One question each day, to see what you are made of. </h5>
    </div>
  </div>
  <div class="row justify-content-between">
    <div class="col-8">
      {{#if top_problem}}
        <DcbHeader @contest={{contest}} @top_problem={{top_problem}} class="pb-5" />
      {{/if}}
      <div class="border-card">
        <div class="row no-gutters justify-content-between">
          <div class="col-6">
            <h4 class="mb-5">Previous DCBs</h4>
          </div>
        </div>
        <ProblemList 
          @route="dcb.problem"
          @problems={{previous_problems}} 
          @theme="blue" />
      </div>
    </div>
    <div class="col-4">
      <DailyGoalCard @level={{level}} class="pb-5">
        <div class="divider-h my-4"></div>
        <h4>My Badges</h4>
        <div class="row badge-scroll my-4">
          <div class="col-4 col-lg-3">
            <img src="/images/hexagon.jpg" alt="Badge Logo" class="mybadge" />
          </div>
          <div class="col-4 col-lg-3">
            <img src="/images/hexagon.jpg" alt="Badge Logo" class="mybadge" />
          </div>
          <div class="col-4 col-lg-3">
            <img src="/images/hexagon.jpg" alt="Badge Logo" class="mybadge" />
          </div>
        </div>
      </DailyGoalCard>
      <div class="border-card px-0 mt-5">
        <h5 class="t-align-c">Leaderboard</h5>
        <LeaderboardView
          @for="contest"
          @theme="blue"
          @contestId={{contest.id}} />
      </div>
    </div>
  </div>
</div>