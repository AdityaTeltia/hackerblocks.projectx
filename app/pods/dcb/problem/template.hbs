<div class="d-flex font-xs bold mb-4 mt-1">
  <BreadCrumbs
    @outputStyle="foundation"
    @tagName="ul"
    @linkable={{true}}
    @crumbClass="px-3" />
</div>
<div class="row">
  <div class="col-12 col-md-8">
    <DcbProblemCard
      class="pb-4"
      @content={{content}}
      @toggleBookmark={{action 'toggleBookmark'}} 
      @onTimerEnd={{action 'onTimerEnd'}} />
    <ProblemView 
      class="py-4"
      @content={{content}}
      @contest={{contest}}
      @problem={{content.problem}} />
  </div>
  <div class="col-12 col-md-4">
    <DailyGoalCardSmall
      @topSubmission={{dcb.top_content.topSubmission}}>
      {{#if dcbEnded}}
        <div class="divider-h my-3"></div>
        <div>
          <p class="orange">
            Note: You will be awarded partial score for this DCB, since this is an old DCB.
          </p>
        </div>
      {{/if}}
    </DailyGoalCardSmall>
    {{#if problem.canSubmitReview}}
      <RatingCard 
        class="py-4"
        @contest={{contest}}
        @problem={{content.problem}} />
    {{/if}}
    <AuthorCard 
      @author={{content.problem.createdBy}}
      class="py-4" />
  </div>
</div>
