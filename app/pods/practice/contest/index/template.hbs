<div class="container">
  <div class="row">
    <div class="col-12 col-md-8">
      <PracticeHeader 
        @practice={{practice}} />
      <ProblemList
        class="mt-5"
        @route="practice.contest.problem"
        @theme="purple"
        @title="Practice Problems"
        @problems={{filteredProblems}}>
        <div>
          {{#if difficulty.length}}
            {{#each difficulty as |tag|}}
              <button class="button-solid button-orange font-xs bold py-2">
                {{#if (eq tag 1)}}
                  Easy
                {{else if (eq tag 2)}}
                  Medium
                {{else}}
                  Hard
                {{/if}}
              </button>
            {{/each}}
          {{/if}}
          {{#if status.length}}
            {{#each status as |tag|}}
              <button class="button-solid button-orange font-xs bold py-2">
                {{tag}}
              </button>
            {{/each}}
          {{/if}}
        </div>
      </ProblemList>
    </div>

    <div class="col-12 col-md-4">
      <PracticeFilterComponent 
        @status={{status}} 
        @changeStatusFilter={{changeStatusFilter}}
        @difficulty={{difficulty}}
        @changeDifficultyFilter={{changeDifficultyFilter}}/>
      <SmallLeaderboardView
        class="mt-5"
        @theme={{"purple"}}
        @leaderboard={{leaderboard}} />
    </div>
  </div>
</div>