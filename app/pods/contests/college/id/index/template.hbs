<ProblemListView @contest={{contest}} @page={{page}} as |problemView|>
  <div class="row">
    <div class="col-12 col-md-8">
      <div class="border-card p-4 bg-gradient-purple white">
        <div class="row mx-0 align-items-center">
          <div class="col-xl-10 col-md-9 col-9">
            <div class="img-desc align-items-center justify-content-center">
              <div class="col-2">
                <img src="/images/stack" alt="" class="">
              </div>
              <div class="description t-align-l col-10">
                <h2>{{contest.name}}</h2>
                <span class="font-sm mt-1">Arrays | LinkedList | Stacks | Queues | Trees | Graphs</span>
              </div>
            </div>
          </div>
          <div>
            <div style="font-size: 2.58rem" class="extra-bold">250+</div>
            <div class="font-sm">PROBLEMS</div>
          </div>
        </div>
      </div>

      <div class="border-card mt-4">
        {{#if problemView.showError}}
          You are not authorized to view problems of this contest.
        {{else}}
          <ProblemList 
            @route="contests.college.id.problem" 
            @theme="purple" 
            @problems={{problemView.problems}} />
          <PaginationPill 
            @pagination={{problemView.problems.meta.pagination}} 
            @setOffset={{action 'setOffset'}} />
        {{/if}}
      </div>
    </div>

    <div class="col-12 col-md-4">
      {{problemView.filterComponent}}
      <div class="border-card mt-5">
        <h5 class="t-align-c">Leaderboard</h5>
        <LeaderboardView @for="contest" @theme={{"purple"}} @contestId={{contest.id}} />
      </div>
    </div>
  </div>
</ProblemListView>