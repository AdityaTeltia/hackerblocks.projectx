<ModalDialog 
  @onClose={{onClose}} 
  @translucentOverlay={{true}} 
  @containerClass="w-50">
  <div class="congo-card">
    <div class="bg-black p-5 t-align-c white position-relative">
      <img src="\app\images\confetti.png" alt="Confetti" class="position-absolute w-100 tl congo-card__backdrop">
      <img src="\app\images\cong.png" alt="Congratulations" class="mt-4">
      <div class="my-3 mx-auto congo-card__divider"></div>
      <h2 class="bold">You have earned a new badge</h2>
      <div class="d-flex mt-5 mb-4 justify-content-center">
        <div class="col-lg-4 col-md-6 col-4">
          <div class="badge-container">
            <img src="{{badge.icon}}" alt="Badge Logo" class="v-align-m">
            <div class="badge-number--{{badge.theme}} badge-number extra-bold">{{badge.metric}}</div>
          </div>
        </div>
      </div>
      <h2>{{badge.contest.name}}</h2>
      <h2>Level {{badge.metric}}</h2>
    </div>
    <div class="p-5 t-align-c">
      <h2>Keep up the good work!</h2>
      {{#if (eq type 'streak')}}
        <div class="font-mds mt-2">Solve 7 more consecutive DCBs to unlock Level {{inc badge.metric}}</div>
      {{else}}
        <div class="font-mds mt-2">Solve more problems to unlock Level {{inc badge.metric}}</div>
      {{/if}}
      <button class="button-solid button-orange mt-4" {{action onClose}}>Continue Solving</button>
    </div>
  </div>
</ModalDialog>