<div class="img-card c-competition-card admission-card">
  <div class="head bg-gradient-black-lr py-5 px-4 all-center">
    <div>
      <div class="img-desc">
        <div class="col-3 pl-0">
          <img src="{{contest.image}}" alt="IMG">
        </div>
        <div class="description justify-content-center">
          <h3>{{contest.name}}</h3>
        </div>
      </div>
      <ul class="divided-list t-align-c mt-4 mb-0">
        <li class="px-xl-2 px-1 t-align-l">
          <div class="list-heading font-md extra-bold orange">12</div>
          <div class="list-data font-mds">Problems</div>
        </li>
        <li class="px-xl-2 px-1 t-align-l">
          <div class="list-heading font-md extra-bold orange">234</div>
          <div class="list-data font-mds">Participants</div>
        </li>
        <li class="px-xl-2 px-1 t-align-l">
          <div class="list-heading font-md extra-bold orange">1 hr</div>
          <div class="list-data font-mds">Time</div>
        </li>
      </ul>
    </div>
  </div>
  <div class="foot align-items-center t-align-c px-2 py-4">
    {{#if contest.isYetToStart}}
      <div class="font-sm mb-3">STARTS IN</div>
      <Timer @to={{moment contest.start_time}} as |t|>
        <ul class="divided-list timer d-inline-block">
          <li class="timer-item pr-xl-2 pr-1">
            <div class="list-heading font-lg extra-bold">{{t.days}}</div>
            <div class="list-data">Days</div>
          </li>
          <li class="timer-item px-xl-2 px-1">
            <div class="list-heading font-lg extra-bold">{{t.hours}}</div>
            <div class="list-data">Hours</div>
          </li>
          <li class="timer-item px-xl-2 px-1">
            <div class="list-heading font-lg extra-bold">{{t.minutes}}</div>
            <div class="list-data">Minutes</div>
          </li>
          <li class="timer-item pl-xl-2 pl-1">
            <div class="list-heading font-lg extra-bold">{{t.seconds}}</div>
            <div class="list-data">Seconds</div>
          </li>
        </ul>
      </Timer>
    {{else if contest.hasEnded}}
    {{else}}
      <div class="font-sm mb-3">ENDS IN</div>
      <Timer @to={{moment contest.end_time}} as |t|>
        <ul class="divided-list timer d-inline-block">
          <li class="timer-item pr-xl-2 pr-1">
            <div class="list-heading font-lg extra-bold">{{t.days}}</div>
            <div class="list-data">Days</div>
          </li>
          <li class="timer-item px-xl-2 px-1">
            <div class="list-heading font-lg extra-bold">{{t.hours}}</div>
            <div class="list-data">Hours</div>
          </li>
          <li class="timer-item px-xl-2 px-1">
            <div class="list-heading font-lg extra-bold">{{t.minutes}}</div>
            <div class="list-data">Minutes</div>
          </li>
          <li class="timer-item pl-xl-2 pl-1">
            <div class="list-heading font-lg extra-bold">{{t.seconds}}</div>
            <div class="list-data">Seconds</div>
          </li>
        </ul>
      </Timer>
    {{/if}}
    <br>
    {{yield}}
  </div>
</div>