<div class="border-card py-5 px-4 bookmark mt-5">
  <h4 class="mb-2">Bookmarked Challenges</h4>

  {{#if fetchBookmarkedProblemsTask.isRunning}}
    <LoadingComponent />
  {{else if bookmarkedProblems.length}}
    {{#each bookmarkedProblems as |bookmarkedProblem|}}
      <div class="mt-3 py-4">
        <div class="row no-gutters align-items-center justify-content-between">
          <h5 class="bold mr-2">{{bookmarkedProblem.problem.name}}</h5>
          <h6>
            <LinkTo
              @route={{bookmarkedProblem.route.name}}
              @models={{bookmarkedProblem.route.model}}
              class="orange">
              Solve<i class="fas fa-arrow-right ml-2"></i>
            </LinkTo>
          </h6>
        </div>
        <ul class="divided-list mt-3">
          <li class="pr-xl-2 pr-md-1 pr-2">
            <div class="list-heading extra-bold orange">{{bookmarkedProblem.problem.difficultyString}}</div>
            <div class="list-data">Dificulty</div>
          </li>
          <li class="px-xl-2 px-md-1 px-2">
            <div class="list-heading extra-bold orange">{{or bookmarkedProblem.problem.topSubmission.score 0}}</div>
            <div class="list-data">Score</div>
          </li>
          <li class="pl-xl-2 pl-md-1 pl-2">
            <div class="list-heading extra-bold orange">100</div>
            <div class="list-data">Max Pts</div>
          </li>
        </ul>
      </div>
      <div class="divider-h"></div>
    {{/each}}
  {{else}}
    You don't have any bookmarked problems.
  {{/if}}

</div>