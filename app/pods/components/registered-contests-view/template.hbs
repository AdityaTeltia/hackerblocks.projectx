<div class="border-card py-5 px-0 mt-5">
  {{#if fetchRegisteredContestTask.isRunning}}
    <LoadingComponent />
  {{else if registrations.length}}
    <div class="row justify-content-between align-items-center mx-0 px-sm-5 px-4 mb-4">
      <h4>Registered Contests</h4>
    </div>
    {{#each registrations as |registration|}}
      {{component rowComponent registration=registration}}
    {{/each}}
  {{else}}
    <div class="all-center my-5">
      <div class="t-align-c">
        <img src="/app/images/contest_orange.png" width="60" height="60" alt="Contest Trophy">
        <h4 class="my-3">Registered Contests</h4>
        <div class="font-xs dark-grey my-3">
          You have not registered in any contest. Register yourself now!
        </div>
        <div class="my-3">
          <LinkTo
            @route="contests"
            class="orange extra-bold font-sm">
            View Contests
          </LinkTo>
        </div>
      </div>
    </div>
  {{/if}}
</div>