<div class="border-card p-lg-5 p-4">
  <div class="row no-gutters align-items-center justify-content-between">
    <div class="col-8">
      <h4>FILTER PROBLEMS</h4>
    </div>
  </div>
  <div class="font-mds bold my-4">Status</div>
  <div class="row no-gutters mb-3">
    <div class="col-6">
      <label class="input-checkbox checkbox-solid">
        <input type="radio" checked={{eq status "solved"}} onClick={{action changeStatusFilter "solved"}}> Solved
        <span></span>
      </label>
    </div>
    <div class="col-6">
      <label class="input-checkbox checkbox-solid">
        <input type="radio" checked={{eq status "unsolved"}} onClick={{action changeStatusFilter "unsolved"}}> Unsolved
        <span></span>
      </label>
    </div>
  </div>
  <div class="row no-gutters mb-3">
    <div class="col-6">
      <label class="input-checkbox checkbox-solid">
        <input type="radio" checked={{eq status "wrong"}} onClick={{action changeStatusFilter "wrong"}}> Wrong
        <span></span>
      </label>
    </div>
    <div class="col-6">
      <label class="input-checkbox checkbox-solid">
        <input type="radio" checked={{eq status "partial"}} onClick={{action changeStatusFilter "partial"}}> Partially Solved
        <span></span>
      </label>
    </div>
  </div>
  <div class="font-mds bold mt-5 mb-4">Difficulty</div>
  <div class="row no-gutters mb-3">
    <div class="col-4">
      <label class="input-checkbox checkbox-solid">
        <input type="radio" checked={{eq difficulty 1}} onClick={{action changeDifficultyFilter 1}}>Easy
        <span></span>
      </label>
    </div>
    <div class="col-4">
      <label class="input-checkbox checkbox-solid">
        <input type="radio" checked={{eq difficulty 2}} onClick={{action changeDifficultyFilter 2}}>Medium
        <span></span>
      </label>
    </div>
    <div class="col-4">
      <label class="input-checkbox checkbox-solid">
        <input type="radio" checked={{eq difficulty 3}} onClick={{action changeDifficultyFilter 3}}>Hard
        <span></span>
      </label>
    </div>
  </div>
</div>