<h3 class="mb-5">{{competition.name}}</h3>
<div class="row">
  <div class="col-12 col-md-8">
    <div class="border-card px-5 pb-0 pt-5 bg-gradient-dblue-lr white">
      <img src="{{competition.banner}}" alt="">
      <div class="divider-h mt-4"></div>
      <div class="word-wrap white my-4">
        {{markdown-to-html competition.overview}}
      </div>
      <div class="row my-4">
        <div class="col-md-5 col-12">
          <h5 class="mb-4">Top Colleges</h5>
          <div class="img-desc orange my-4">
            <div>
              <h2>#1</h2>
            </div>
            <div class="description t-align-l pl-md-2 pl-3">
              <div class="font-sm bold">Bharati Vidyapeeth College of Engineering</div>
              <span>43000 Points</span>
            </div>
          </div>
          <div class="img-desc my-4">
            <div>
              <h2>#2</h2>
            </div>
            <div class="description t-align-l pl-md-2 pl-3">
              <div class="font-sm bold">Gurunank Dev University</div>
              <span>42000 Points</span>
            </div>
          </div>
          <div class="img-desc my-4">
            <div>
              <h2>#3</h2>
            </div>
            <div class="description t-align-l pl-md-2 pl-3">
              <div class="font-sm bold">Maharaja Agresen Institute Of Technology</div>
              <span>40000 Points</span>
            </div>
          </div>
        </div>
        <div class="col-md-7 col-12">
          <h5 class="mb-4">Top Students</h5>
          <div class="img-desc align-items-center orange my-4">
            <div>
              <h2>#1</h2>
            </div>
            <div class="pl-xl-2 pl-3">
              <div class="img-ring s-50x50">
                <img class="round w-100 h-100"
                  src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTmL43mSCo0MAu3fCgV8t6QRsNzyiatE_Har4TjE8M6NZ-i0tKDzA"
                  alt="">
              </div>
            </div>
            <div class="description pl-xl-2 pl-3">
              <div class="font-mds bold">Siddharth Jain<span class="font-xs regular"> (4300 Points)</span></div>
              <div>Bharati Vidyapeeth College of Engineering</div>
            </div>
          </div>
          <div class="img-desc align-items-center my-4">
            <div>
              <h2>#2</h2>
            </div>
            <div class="pl-xl-2 pl-3">
              <div class="img-ring s-50x50">
                <img class="round w-100 h-100"
                  src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTmL43mSCo0MAu3fCgV8t6QRsNzyiatE_Har4TjE8M6NZ-i0tKDzA"
                  alt="">
              </div>
            </div>
            <div class="description pl-xl-2 pl-3">
              <div class="font-mds bold">Siddharth Jain<span class="font-xs regular"> (4000 Points)</span></div>
              <div>Bharati Vidyapeeth College of Engineering</div>
            </div>
          </div>
          <div class="img-desc align-items-center my-4">
            <div>
              <h2>#3</h2>
            </div>
            <div class="pl-xl-2 pl-3">
              <div class="img-ring s-50x50">
                <img class="round w-100 h-100"
                  src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTmL43mSCo0MAu3fCgV8t6QRsNzyiatE_Har4TjE8M6NZ-i0tKDzA"
                  alt="">
              </div>
            </div>
            <div class="description pl-xl-2 pl-3">
              <div class="font-mds bold">Siddharth Jain<span class="font-xs regular"> (3900 Points)</span></div>
              <div>Maharaja Agrasen Institute of Technology</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="border-card px-5 pb-0 pt-5 mt-4">
      <h5 class="mb-4 t-align-c">
        Overall Leaderboard
      </h5>

      <LeaderboardView 
        @for="competition" 
        @competitionId={{competition.id}} 
        @columns=['college']
        @allowFilter=true />
    </div>
  </div>

  <div class="col-12 col-md-4">
    <UpcomingCompetitionContest
      @contest={{fetchRecentContestTask.lastSuccessful.value}} >
      {{#link-to
        'competitions.id.contest'
        fetchRecentContestTask.lastSuccessful.value.id
        class="button-solid button-orange mt-4 mb-2 mx-auto"
      }}
        Solve Challenge
      {{/link-to}}
    </UpcomingCompetitionContest>
    <div class="border-card my-5">
      <h5 class="mb-4">FAQ's</h5>
      {{markdown-to-html competition.faqs}}
    </div>
  </div>
</div>