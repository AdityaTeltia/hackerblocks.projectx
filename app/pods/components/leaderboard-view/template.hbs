<div class="border-card p-4 p-sm-5 mb-5">
  <h4 class="mb-5">Leaderboard</h4>
  <table class="w-100">
    <thead class="font-sm red extra-bold">
      <td class="pb-4">Rank</td>
      <td class="pb-4">User</td>
      <td class="pb-4">Score</td>
    </thead>
    <tbody>
      {{#each sorted_leaderboard as |row i|}}
      <tr class="extra-bold">
        <td class="pb-4 pt-2">{{inc i}}</td>
        <td class="pb-4 pt-2">
          <div class="img-desc align-items-center">
            <img class="round s-30x30" src="/images/placeholder.gif" alt="">
            <div class="description ml-3">
              {{row.user.name}}
            </div>
          </div>
        </td>
        <td class="pb-4 pt-2">{{row.score}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>