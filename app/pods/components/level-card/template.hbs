<div class="border-card px-0 c-daily-goal-card mb-5">
  <h4>Current Level</h4>
  <div class="font-sm orange bold">Level {{if level level.level 0}}<i class="fas fa-crown pl-2"></i></div>
  {{yield}}
  <div class="divider-h my-4 px-md-5 px-4"></div>

  {{#if fetchBadgesTask.isRunning}}
    <LoadingComponent />
  {{else}}
    <h4 class="mb-4 px-md-5 px-4">My Badges</h4>
    <div class="flex-row align-items-center px-2 mb-4">
      {{#if badges.length}}
      <span class="font-lg bold"><a href="#">〈</a></span>
      <div class="row c-card-carousel mx-3">
        {{#each badges as |badge|}}
        <div class="col-md-4 col-3">
          <img src="{{badge.icon}}" alt="Badge Logo" class="v-align-m">
          <div class="bold card-md mt-2">Achieved Level {{badge.metric}}</div>
        </div>
        {{/each}}
      </div>
      <span class="font-xl bold"><a href="#">〉</a></span>
      {{else}}
        <div class="t-align-c">
          No badges earned.
        </div>
      {{/if}}
    </div>
    
    <div class="divider-h my-4 px-md-5 px-4"></div>
  {{/if}}
  <div class="px-md-5 px-4">
    <h4>Unlock Badge</h4>
    {{#if level}}
      <div class="font-xs">Complete {{sub level.nextRequiredSubmissionCount level.perfectSubmissionCount}} more problem to unlock badge</div>
      <div class="all-center position-relative mt-5 mb-3">
        <img src="/app/images/hexagon.jpg" alt="Badge Logo" class="badge w-30" />
        <i class="fas fa-lock fa-2x position-absolute white"></i>
      </div>
      <h5 class="purple">{{level.contest.name}} Level {{inc level.level}}</h5>
      <progress value="{{progress}}" max="100" class="mt-4 mb-2 mx-auto w-90"></progress>
      <h6 class="bold">{{level.perfectSubmissionCount}} of {{level.nextRequiredSubmissionCount}} challenges completed</h6>
    {{/if}}
  </div>
</div>
