<div class="img-card p-5 hb-tab-nav">
  <div class="tab-nav-underline">
    <div class="tab {{if (eq selectedTab "problem") "active"}} py-4 pointer" {{action (mut selectedTab) "problem"}}>
      Problem
    </div>
    <div class="tab {{if (eq selectedTab "submissions") "active"}} py-4 pointer"
      {{action (mut selectedTab) "submissions"}}>
      Submissions
    </div>
    {{#if contest.controlFlags.show-leaderboard}}
    <div class="tab {{if (eq selectedTab "leaderboard") "active"}} py-4 pointer"
      {{action (mut selectedTab) "leaderboard"}}>
      Leaderboard
    </div>
    {{/if}}
    {{#if contest.allowTestcaseEditorialUnlock}}
    <div class="tab {{if (eq selectedTab "solution") "active"}} py-4 pointer" {{action (mut selectedTab) "solution"}}>
      Solution
    </div>
    {{/if}}
  </div>

  {{#liquid-if (eq selectedTab "problem")}}
  <ProjectView::ProjectDetailView
    @project={{project}} />
  {{else if (eq selectedTab "submissions")}}
  <ProjectView::ProjectSubmissionView 
    @contest={{contest}}
    @content={{content}} />
  {{else if (eq selectedTab "leaderboard")}}
  <ProjectView::ProjectLeaderboardView
    class="pt-5"
    @for="content"
    @contestId={{contest.id}}
    @contentId={{content.id}}
    @allowFilter=true 
    @columns={{array 'college'}} />
  {{else if (eq selectedTab "solution")}}
  <ProjectView::ProjectSolutionView
    @contest={{contest}}
    @project={{content.project}} />
  {{/liquid-if}}
  <div class="form-group row mt-4">
    <label class="col-sm-3 extra-bold">Upload Solution</label>
    
      {{file-uploader 
        didUpload=(action 'didUploadFile') 
        progress=(action 'Progress') 
        didSign=(action 'didSignUpload') 
        didError=(action 'didError')
        startUpload=Trigger 
        textInput=new_expected_output}}
      <button {{action "triggerUpload"}} disabled={{uploadTrigger}} class="button-solid button-orange float-right">Upload</button>
      {{!-- <button class="button-solid button-orange float-right" {{action (perform submitProjectTask)}}>
      Submit Project
    </button> --}}
    
  
  </div>
</div>
{{#if (or submitProjectTask.isRunning lastResult)}}
  <div class="mt-4">
    <SubmissionResult
      @contentType={{content.type}}
      @judgeResult={{lastResult}}
    />
  </div>
{{/if}}
