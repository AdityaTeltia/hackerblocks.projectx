<div class="img-card c-competition-card">
  <div class="head bg-gradient-dblue-lr py-4 px-3 all-center">
    <div>
      <div class="font-mds">Upcoming Contest</div>
      <h2>{{ contest.name }}</h2>
      <ul class="divided-list">
        <li class="px-xl-3 px-2">
          <div class="list-heading font-mds extra-bold orange">{{problemCount}}</div>
          <div class="list-data">Problems</div>
        </li>
        <li class="px-xl-3 px-2">
          <div class="list-heading font-mds extra-bold orange">
            {{moment-format contest.start_time "DD MMM"}}
          </div>
          <div class="list-data">Starts</div>
        </li>
        <li class="px-xl-3 px-2">
          <div class="list-heading font-mds extra-bold orange">
            {{moment-format contest.end_time "DD MMM"}}
          </div>
          <div class="list-data">Ends</div>
        </li>
      </ul>
    </div>
  </div>
  {{#if contest.end_time}}
    <div class="foot align-items-center t-align-c px-2 py-4">
      <div class="font-sm mb-4">STARTS IN</div>
      <Timer class="mb-4" @to={{contest_end_time}} as |time|>
        <ul class="divided-list timer d-inline-block">
          <li class="timer-item">
            <div class="list-heading font-lg extra-bold">{{time.days}}</div>
            <div class="list-data">Days</div>
          </li>
          <li class="timer-item">
            <div class="list-heading font-lg extra-bold">{{time.hours}}</div>
            <div class="list-data">Hours</div>
          </li>
          <li class="timer-item">
            <div class="list-heading font-lg extra-bold">{{time.minutes}}</div>
            <div class="list-data">Minutes</div>
          </li>
          <li class="timer-item">
            <div class="list-heading font-lg extra-bold">{{time.seconds}}</div>
            <div class="list-data">Seconds</div>
          </li>
        </ul>
      </Timer>
      {{yield}}
    </div>
  {{/if}}
</div>