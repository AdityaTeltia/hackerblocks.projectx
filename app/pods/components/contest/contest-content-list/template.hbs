<WAsync
  @task={{fetchContentsTask}} 
  @fireTrigger={{taskTrigger}} as |contents isError|>
  {{#if isError}}
    You are not authorized to view problems of this contest.
  {{else}}
    <div class="list-divided border-none">
      {{#each contents as |content|}}      
        <Contest::ContestContentListItem 
          @route={{route}} 
          @content={{content}}
          @contest={{contest}} />
      {{/each}}
    </div>
    {{yield contents}}
  {{/if}}
</WAsync>