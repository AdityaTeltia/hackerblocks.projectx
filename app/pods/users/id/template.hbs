{{outlet}}
<div class="row">
  <div class="col-md-4 col-12">
    <ProfileCard 
      @user={{user}}/>
  </div>

  <div class="col-md-8 col-12">
    <div class="border-card p-5 mt-md-0 mt-5">
      <h4 class="t-align-c mb-4">Submissions</h4>
      <SubmissionsHeatMap 
        @userId={{user.id}}
        @onDateClick={{fetchSubmissionsForDayTask}} />

      <div class="divider-h bh-grey my-4"></div>

      <div class="c-hb-leaderboard profile">
        <table class="w-100 ml-md-4">
          <thead class="font-sm extra-bold orange">
            <td class="pb-4">Problem</td>
            <td class="pb-4">Score</td>
            <td class="pb-4">Language</td>
            <td class="pb-4">Time</td>
            {{#if userHimself}}
              <td class="pb-4">Result</td>
            {{/if}}
          </thead>
          <tbody>
            {{#each submissions as |submission|}}
              <tr>
                <td class="py-3">{{submission.problem.name}}</td>
                <td class="py-3">{{submission.score}}</td>
                <td class="py-3">{{submission.language}}</td>
                <td class="py-3">{{moment-from submission.createdAt}}</td>
                {{#if userHimself}}
                  <td class="py-3"><a href="#" class="orange">View</a></td>
                {{/if}}
              </tr>
            {{/each}}
          </tbody>
        </table>
        <div class="divider-h mx-auto my-4"></div>
        <div class="t-align-c bold">
          <i class="fas fa-angle-left mx-2"></i>
          <span>Prev</span>
          <span class="regular mx-3">1-20 of 245</span>
          <span>Next</span>
          <i class="fas fa-angle-right mx-2"></i>
        </div>
      </div>
    </div>

    <ProfileBadges 
      @user={{user.id}} />

    {{#if userHimself}}
      <div class="row">
        <div class="col-lg-6 col-12">
          <RegisteredContestsView 
            @rowComponent="registered-contests-view/contest-row"/>
        </div>
        <div class="col-lg-6 col-12">
        </div>
      </div>
    {{/if}}
  </div>
</div>